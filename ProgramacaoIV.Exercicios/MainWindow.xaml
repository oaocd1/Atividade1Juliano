<Window x:Class="ProgramacaoIV.Exercicios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramacaoIV.Exercicios"
        mc:Ignorable="d"
        Title="Atividades" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="btnExercicioUm" Grid.Column="0" Grid.Row="1" Width="145" Content="Exercício 1" Click="btnExercicioUm_Click"/>
        <Button x:Name="btnExercicioDois" Grid.Column="1" Grid.Row="1" Width="145" Content="Exercício 2" Click="btnExercicioDois_Click"/>
        <Button x:Name="btnExercicioTres" Grid.Column="2" Grid.Row="1" Width="145" Content="Exercício 3" Click="btnExercicioTres_Click"/>
        <Button x:Name="btnExercicioQuatro" Grid.Column="3" Grid.Row="1" Width="145" Content="Exercício 4" Click="btnExercicioQuatro_Click"/>
        <Button x:Name="btnExercicioCinco" Grid.Column="4" Grid.Row="1" Width="145" Content="Exercício 5" Click="btnExercicioCinco_Click"/>

        <Button x:Name="btnExercicioSeis" Grid.Column="0" Grid.Row="2" Width="145" Content="Exercício 6" Click="btnExercicioSeis_Click"/>
        <Button x:Name="btnExercicioSete" Grid.Column="1" Grid.Row="2" Width="145" Content="Exercício 7" Click="btnExercicioSete_Click"/>
        <Button x:Name="btnExercicioOito" Grid.Column="2" Grid.Row="2" Width="145" Content="Exercício 8" Click="btnExercicioOito_Click"/>
        <Button x:Name="btnExercicioNove" Grid.Column="3" Grid.Row="2" Width="145" Content="Exercício 9" Click="btnExercicioNove_Click"/>
        <Button x:Name="btnExercicioDez" Grid.Column="4" Grid.Row="2" Width="145" Content="Exercício 10" Click="btnExercicioDez_Click"/>
    </Grid>
</Window>
